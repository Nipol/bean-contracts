{
  "extends": [
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error"
  },
  "overrides": [
    {
      "files": ["*.test.js", "*.spec.js", "*.test.ts", "*.spec.ts"],
      "rules": {
        "no-unused-expressions": "warn"
      }
    }
  ]
}
